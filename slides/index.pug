mixin section(title, color)
  //- section&attributes(=ONE)
  section(data-background=color)
    section.center
      h1=title
    block

mixin slide(title)
  section
    h2=title

mixin figure(name, color)
  section.center(data-background=color)
    img(src='figs/' + name)

mixin embed(src)
  section
    div.stretch
      iframe(src=src, width='100%', height='100%')

